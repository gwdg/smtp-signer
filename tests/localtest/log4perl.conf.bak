############################################################
#  Log::Log4perl conf - Syslog                             #
############################################################
log4perl.rootLogger                 = INFO, LOGFILE
log4perl.appender.LOGFILE           = Log::Log4perl::Appender::File
log4perl.appender.LOGFILE.filename  = "/tmp/log4perl"
log4perl.appender.LOGFILE.mode      = append

